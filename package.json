{
	"name": "{{pkg}}",
	"version": "1.0.0",
	"description": "{{description}}",
	"bin": {
		"{{pkg}}": "cli/cli.js"
	},
	"scripts": {
		"test": "echo 'No tests provided'"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/{{ghAuthor}}/{{ghRepoName}}.git"
	},
	"bugs": {
		"url": "https://github.com/{{ghAuthor}}/{{ghRepoName}}/issues"
	},
	"homepage": "https://github.com/{{ghAuthor}}/{{ghRepoName}}#readme",
	"keywords": [
		"javascript",
		"node.js",
		"cli",
		"utility"
	],
	"author": "Cassandra Spruit",
	"license": "GPL-3.0-or-later",
	"dependencies": {
		"chalk": "^3.0.0",
		"meow": "^6.0.1"
	},
	"vulcan": {
		"name": "cli-utility",
		"fields": {
			"pkg": {
				"description": "NPM package name",
				"type": "string",
				"pattern": "^[0-9a-z\\$\\-\\+\\!\\*\\'\\(\\)][0-9a-zA-Z\\$\\-\\_\\.\\+\\!\\*\\'\\(\\)]{0,213}$",
				"patternDescription": "Must match NPM naming scheme (alphanumeric, no spaces, cannot start with a . or _ or capital letter)",
				"required": true
			},
			"description": "Package description",
			"name": "Display name of package",
			"npmAuthor": "NPM package author",
			"ghRepoName": {
				"description": "GitHub repo name",
				"required": true
			},
			"ghAuthor": "GitHub repo owner"

		}
	}
}