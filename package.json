{
	"name": "{{pkg}}",
	"version": "1.0.0",
	"description": "{{description}}",
	"main": "{{pkg}}.js",
	"type": "module",
	"scripts": {
		"build": "cli/cli.js -d dist",
		"test": "echo 'No tests provided'"
	},
	"keywords": [
		"javascript",
		"node.js",
		"cli",
		"utility"
	],
	"author": "Cassandra Spruit",
	"license": "GPL-3.0-or-later",
	"bin": {
		"{{pkg}}": "cli/cli.js"
	},
	"dependencies": {
		"chalk": "^3.0.0",
		"meow": "^6.0.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.8.3",
		"@babel/core": "^7.8.3",
		"@babel/preset-env": "^7.8.3"
	},
	"vulcan": {
		"name": "cli-utility",
		"fields": {
			"pkg": {
				"description": "NPM package name",
				"type": "string",
				"pattern": "^[0-9a-z\\$\\-\\+\\!\\*\\'\\(\\)][0-9a-zA-Z\\$\\-\\_\\.\\+\\!\\*\\'\\(\\)]{0,213}$",
				"patternDescription": "Must match NPM naming scheme (alphanumeric, no spaces, cannot start with a . or _ or capital letter)",
				"required": true
			},
			"description": "Package description",
			"name": "Display name of package",
			"urlName": {
				"description": "URL name of package repo",
				"required": true
			}
		}
	}
}